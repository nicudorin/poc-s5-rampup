<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.s5.rampup.s5rampup.persistence.PersonMapper">

    <insert id="createPerson" parameterType="Person" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO people (first_name, last_name)
        VALUES      (#{firstName}, #{lastName})
    </insert>

    <update id="updatePerson" parameterType="Person">
        UPDATE people
        SET    first_name = #{firstName}, last_name = #{lastName}
        WHERE  id = #{id}
    </update>

    <select id="getPerson" resultType="Person">
        SELECT p.id         AS id,
               p.first_name AS firstName,
               p.last_name  AS lastName
        FROM   people p
        WHERE  p.id = #{id}
    </select>

    <select id="getPeople" resultType="Person">
        SELECT p.id         AS id,
               p.first_name AS firstName,
               p.last_name  AS lastName
        FROM   people p
    </select>

    <delete id="deletePerson">
        DELETE FROM people
        WHERE       id = #{id}
    </delete>

</mapper>